<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane prefWidth="600" prefHeight="400" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">


    <columnConstraints>

        <ColumnConstraints hgrow="ALWAYS" percentWidth="80" minWidth="400"/>

        <ColumnConstraints hgrow="SOMETIMES" percentWidth="20" minWidth="150"/>
    </columnConstraints>


    <rowConstraints>

        <RowConstraints vgrow="NEVER" minHeight="40"/>

        <RowConstraints vgrow="NEVER" minHeight="40"/>

        <RowConstraints vgrow="ALWAYS" minHeight="200"/>

        <RowConstraints vgrow="NEVER" minHeight="30"/>
    </rowConstraints>

    <children>

        <HBox spacing="10" GridPane.rowIndex="0">
            <children>
                <Label text="Name:"/>
                <TextField HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>


        <Label text="Description:" GridPane.rowIndex="1"/>
        <TextArea GridPane.rowIndex="2" GridPane.columnSpan="2"/>

        <Button text="Ok" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Button text="Cancel" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1"/>


        <HBox alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnSpan="2">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <children>
                <Label text="Status: Ready"/>
            </children>
        </HBox>
    </children>
</GridPane>
